<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ClientSeries.Views.SeriesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientSeries.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel VerticalAlignment="Center">
        <TextBlock Name="TextBlockTitre" Text="Titre" RelativePanel.AlignHorizontalCenterWithPanel="True">
            
        </TextBlock>
        <TextBox Name="TextBoxTitre" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockTitre" Margin="10" Width="500">
            
        </TextBox>

        <TextBlock Name="TextBlockResume" Text="Resume" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBoxTitre" Margin="10">
            
        </TextBlock>
        <TextBox Name="TextBoxResume" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockResume" Margin="10" Width="500" Height="150">
            
        </TextBox>

        <TextBlock Name="TextBlockNbSaisons" Text="Nb saisons" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBoxResume" Margin="10">
            
        </TextBlock>
        <TextBox Name="TextBoxNbSaisons" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockNbSaisons" Margin="10" Width="100">
            
        </TextBox>

        <TextBlock Name="TextBlockNbEpisodes" Text="Nb épisodes" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBoxNbSaisons" Margin="10">

        </TextBlock>
        <TextBox Name="TextBoxNbEpisodes" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockNbEpisodes" Margin="10" Width="100">

        </TextBox>

        <TextBlock Name="TextBlockAnneeCreation" Text="Année création" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBoxNbEpisodes" Margin="10">

        </TextBlock>
        <TextBox Name="TextBoxAnneeCreation" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockAnneeCreation" Margin="10" Width="100">

        </TextBox>

        <TextBlock Name="TextBlockChaine" Text="Chaine" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBoxAnneeCreation" Margin="10">

        </TextBlock>
        <TextBox Name="TextBoxChaine" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockChaine" Margin="10" Width="200">

        </TextBox>

        <Button Name="ButtonAjouter" Content="Ajouter" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBoxChaine" Margin="25" Width="150">
            
        </Button>
    </RelativePanel>
</Page>
